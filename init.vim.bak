" Set LUA path
"execute 'set luadll=c:/Users/jpayne/AppData/Local/Programs/Lua/bin/lua54.dll'

let g:which_key_timeout = 100

" Set line numbering
set number relativenumber

" Use system clipboard to permit copy/paste from any program
set clipboard=unnamed

" Bufferline setup
set termguicolors

" Setup tabs
set expandtab
set shiftwidth=4
set tabstop=4

call plug#begin()

" List your plugins here
Plug 'catppuccin/vim', { 'as': 'catppuccin' }
Plug 'tpope/vim-sensible'
Plug 'mason-org/mason.nvim' " not working?
Plug 'neovim/nvim-lspconfig' " not working?
Plug 'mason-org/mason-lspconfig.nvim' " not working?
Plug 'nvim-mini/mini.nvim'
Plug 'nvim-tree/nvim-web-devicons' 
Plug 'akinsho/bufferline.nvim', { 'tag': '*' }
Plug 'folke/which-key.nvim'
Plug 'voldikss/vim-floaterm'
Plug 'itchyny/lightline.vim'
Plug 'tpope/vim-fugitive'
Plug 'romainl/vim-cool'
Plug 'junegunn/fzf', { 'do': { -> fzf#install() } } 
Plug 'junegunn/fzf.vim'
Plug 'nvim-lua/plenary.nvim'
Plug 'nvim-telescope/telescope.nvim'
Plug 'nvim-telescope/telescope-file-browser.nvim'
Plug 'machakann/vim-highlightedyank'
Plug 'svermeulen/vim-easyclip'

call plug#end()

colorscheme catppuccin_macchiato
" Bufferline
lua << EOF
require("bufferline").setup{}
EOF

" Mason
lua << EOF
require("mason").setup()
require("mason-lspconfig").setup()
EOF

" Floaterm
nnoremap   <silent>   <F7>    :FloatermToggle<CR>
tnoremap   <silent>   <F7>    <C-\><C-n>:FloatermToggle<CR>

" Telescope
lua << EOF
local builtin = require('telescope.builtin')
vim.keymap.set('n', '<leader>ff', builtin.find_files, { desc = 'Telescope find files' })
vim.keymap.set("n", "<F6>", function()
	require("telescope").extensions.file_browser.file_browser()
end)
EOF


" Lightline color config
set noshowmode
let g:lightline = {
						\ 'colorscheme': 'wombat',
						\ }
